{
  "manifest_version": 3,
  "name": "CastToTV Media Hub",
  "version": "0.1.0",
  "description": "Quickly view and control recently active media elements across tabs from a media-hub style popup.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "windows"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "CastToTV Media Hub",
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "utils/messageTypes.js",
        "content/mediaTracker.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}